<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Create New Course</h1>
          <p class="mb-0">Add a new course to the Mentor catalog</p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li><a href="/courses">Courses</a></li>
        <li class="current">Create Course</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Create Course Section -->
<section id="contact" class="contact section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row gy-4">
      <div class="col-lg-12">
        <form action="/admin/courses/create" method="post" enctype="multipart/form-data" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
          <div class="row gy-4">

            <!-- Course Title -->
            <div class="col-md-12">
              <label for="title">Course Title *</label>
              <input type="text" class="form-control" name="title" id="title" placeholder="Course Title" required maxlength="50" />
            </div>

            <!-- Course Summary -->
            <div class="col-md-12">
              <label for="summary">Summary *</label>
              <textarea class="form-control" name="summary" id="summary" rows="3" placeholder="Brief course summary (max 350 characters)" required maxlength="350"></textarea>
            </div>

            <!-- Course Description -->
            <div class="col-md-12">
              <label for="description">Description *</label>
              <textarea class="form-control" name="description" id="description" rows="6" placeholder="Detailed course description" required></textarea>
            </div>

            <!-- Price -->
            <div class="col-md-6">
              <label for="price">Price ($) *</label>
              <input type="number" class="form-control" name="price" id="price" placeholder="199.99" step="0.01" min="0" required />
            </div>

            <!-- Capacity -->
            <div class="col-md-6">
              <label for="capacity">Capacity *</label>
              <input type="number" class="form-control" name="capacity" id="capacity" placeholder="30" min="1" required />
            </div>

            <!-- Trainer Dropdown -->
            <div class="col-md-12">
              <label for="trainer">Trainer *</label>
              <select class="form-control" name="trainer" id="trainer" required>
                <option value="">Select a trainer...</option>
                <% trainers.forEach(trainer => { %>
                  <option value="<%= trainer._id %>"><%= trainer.name %></option>
                <% }) %>
              </select>
            </div>

            <!-- Image Upload -->
            <div class="col-md-12">
              <label for="image">Course Image * (jpg, jpeg, or png)</label>
              <input type="file" class="form-control" name="image" id="image" accept=".jpg,.jpeg,.png" required />
              <small class="form-text text-muted">Upload a course image (max 5MB)</small>
            </div>

            <!-- Submit Button -->
            <div class="col-md-12 text-center">
              <button type="submit" class="btn btn-primary">Create Course</button>
              <a href="/courses" class="btn btn-secondary">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<!-- /Create Course Section -->