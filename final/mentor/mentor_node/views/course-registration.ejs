<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Course Registration</h1>
          <p class="mb-0">Complete your course registration below</p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li><a href="/courses">Courses</a></li>
        <li class="current">Register</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Registration Section -->
<section id="contact" class="contact section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row gy-4">
      <div class="col-lg-12 d-flex align-items-center justify-content-center">
        <form action="/courses/register" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
          <div class="row gy-4">

            <!-- First Name (readonly) -->
            <div class="col-md-12">
              <label for="firstName">First Name</label>
              <input type="text" class="form-control" id="firstName" value="<%= user.firstName %>" readonly />
            </div>

            <!-- Last Name (readonly) -->
            <div class="col-md-12">
              <label for="lastName">Last Name</label>
              <input type="text" class="form-control" id="lastName" value="<%= user.lastName %>" readonly />
            </div>

            <!-- Email (readonly) -->
            <div class="col-md-12">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email" value="<%= user.email %>" readonly />
            </div>

            <!-- Course Selection -->
            <div class="col-md-12">
              <label for="courseId">Select Course</label>
              <select name="courseId" id="courseId" class="form-control" required>
                <% courses.forEach(course=> { %>
                  <option value="<%= course._id %>" <%=selectedCourseId===course._id.toString() ? 'selected' : '' %>>
                    <%= course.title %> - $<%= course.price %>
                  </option>
                  <% }) %>
              </select>
            </div>

            <div class="col-md-12 text-center">
              <button type="submit">Register for Course</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<!-- End Registration Section -->