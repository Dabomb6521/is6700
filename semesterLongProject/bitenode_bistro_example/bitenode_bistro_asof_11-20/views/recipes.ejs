<!-- Hero Start -->
<div class="container-xxl py-5 bg-dark hero-header mb-5">
  <div class="container text-center my-5 pt-5 pb-4">
    <h1 class="display-3 text-white mb-3 animated slideInDown">Recipes</h1>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb justify-content-center text-uppercase">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item text-white active" aria-current="page">Recipes</li>
      </ol>
    </nav>
  </div>
</div>
<!-- Hero End -->
<!-- Navbar & Hero End -->

<!-- Menu Start -->
<div class="container-xxl py-5">
  <div class="container">
    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
      <h5 class="section-title ff-secondary text-center text-primary fw-normal">Recipes</h5>
      <h1 class="mb-5">Most Popular Recipes</h1>
    </div>
    <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
      <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-5">
        <% 
        mealTypes.forEach((mealType, index) => { 
            %>
        <li class="nav-item">
          <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 <%= mealType.toLowerCase() === selectedMealType.toLowerCase() ? "active" : "" %>" data-bs-toggle="pill" href="#tab-<%= index + 1 %>">

            <div class="ps-3">

              <h6 class="mt-n1 mb-0"><%= mealType %></h6>
            </div>
          </a>
        </li>
        <% }) %>

       
      </ul>
      <div class="tab-content">
        <%  mealTypes.forEach((mealType, index) => {  %>
        <div id="tab-<%= index + 1 %>" class="tab-pane fade p-0 show <%= mealType.toLowerCase() === selectedMealType.toLowerCase() ? "active" : "" %>">
          <div class="row g-4">
            <% 
            
            recipes.filter(recipe => recipe.mealType.includes(mealType)).forEach(recipe => { %>
            <div class="col-lg-6">
            <a href="/recipes/<%= recipe.mealType[0].toLowerCase() %>/<%= recipe.id %>" class="text-decoration-none text-dark">
              <div class="d-flex align-items-center">
                <img class="flex-shrink-0 img-fluid rounded" src="<%= recipe.image %>" alt="" style="width: 80px" />
                <div class="w-100 d-flex flex-column text-start ps-4">
                  <h5 class="d-flex justify-content-between border-bottom pb-2">
                    <span><%= recipe.name %></span>
                    <span class="text-primary">Rating: <%= recipe.rating %></span>
                  </h5>
                  <small class="fst-italic"><%= recipe.tags.join(", ") %></small>
                </div>
              </div>
              </a>
            </div>

            <% }) %>
          </div>
        </div>
        <% })%>
      </div>
    </div>
  </div>
</div>
<!-- Menu End -->
