<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Contact Requests</h1>
          <p class="mb-0">View and manage all contact form submissions</p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li class="current">Contact Requests</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Contact Requests Section -->
<section class="section">
  <div class="container">
    <div class="row mb-4">
      <div class="col-12 text-end">
        <a href="/admin/contacts/respond" class="btn btn-primary">Respond to Contacts</a>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <% if (contacts.length === 0) { %>
          <p class="text-center">No contact requests found.</p>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Subject</th>
                  <th>Message</th>
                  <th>Responded?</th>
                </tr>
              </thead>
              <tbody>
                <% contacts.forEach(contact => { %>
                <tr>
                  <td><%= new Date(contact.postDate).toLocaleString() %></td>
                  <td><%= contact.name %></td>
                  <td><a><%= contact.email %></a></td>
                  <td><%= contact.subject %></td>
                  <td><%= contact.message %></td>
                  <td>
                    <% if (contact.response) { %>
                      <span class="badge bg-success">Yes</span>
                    <% } else { %>
                      <span class="badge bg-danger">No</span>
                    <% } %>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</section>
<!-- End Contact Requests Section -->