<% const message=locals.message || "" ; const entries=locals.entries || {}; const errors=locals.errors || []; %>

  <!-- Page Title -->
  <div class="page-title" data-aos="fade">
    <div class="heading">
      <div class="container">
        <div class="row d-flex justify-content-center text-center">
          <div class="col-lg-8">
            <h1>Sign Up</h1>
            <p class="mb-0">Create your account below.</p>
          </div>
        </div>
      </div>
    </div>
    <nav class="breadcrumbs">
      <div class="container">
        <ol>
          <li><a href="/">Home</a></li>
          <li class="current">Sign Up</li>
        </ol>
      </div>
    </nav>
  </div>
  <!-- End Page Title -->

  <!-- Sign Up Section -->
  <section id="contact" class="contact section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
      <div class="row gy-4">
        <div class="col-lg-12 d-flex align-items-center justify-content-center">
          <form action="#" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
            <div class="row gy-4">

              <!-- First Name -->
              <div class="col-md-12">
                <% let fieldErrors=errors.filter(error=> error.path === "firstName"); %>
                  <input type="text" class="form-control <%= fieldErrors.length > 0 ? 'is-invalid': '' %>"
                    name="firstName" placeholder="First Name" value="<%= entries.firstName || '' %>" required />
                  <% if (fieldErrors.length> 0) { %>
                    <div>class="invalid-feedback d-block"
                      <% fieldErrors.forEach((fieldError)=> { %>
                        <p class="mb-0">
                          <%= fieldError.message %>
                        </p>
                        <% }) %>
                    </div>
                    <% } %>
              </div>

              <!-- Last Name -->
              <div class="col-md-12">
                <% fieldErrors=errors.filter(error=> error.path === "lastName"); %>
                  <input type="text" class="form-control <%= fieldErrors.length > 0 ? 'is-invalid': '' %>"
                    name="lastName" placeholder="Last Name" value="<%= entries.lastName || '' %>" required />
                  <% if (fieldErrors.length> 0) { %>
                    <div class="invalid-feedback d-block">
                      <% fieldErrors.forEach((fieldError)=> { %>
                        <p class="mb-0">
                          <%= fieldError.message %>
                        </p>
                        <% }) %>
                    </div>
                    <% } %>
              </div>

              <!-- Email -->
              <div class="col-md-12">
                <% fieldErrors=errors.filter(error=> error.path === "email"); %>
                  <input type="email" class="form-control <%= fieldErrors.length > 0 ? 'is-invalid' : '' %>"
                    name="email" placeholder="Email" value="<%= entries.email || '' %>" required />
                  <% if (fieldErrors.length> 0) { %>
                    <div class="invalid-feedback d-block">
                      <% fieldErrors.forEach((fieldError)=> { %>
                        <p class="mb-0">
                          <%= fieldError.message %>
                        </p>
                        <% }) %>
                    </div>
                    <% } %>
              </div>

              <!-- Password -->
              <div class="col-md-12">
                <% fieldErrors=errors.filter(error=> error.path === "password"); %>
                  <input type="password" class="form-control <%= fieldErrors.length > 0 ? 'is-invalid' : '' %>"
                    name="password" placeholder="Password (min 6 characters)" required />
                  <% if (fieldErrors.length> 0) { %>
                    <div class="invalid-feedback d-block">
                      <% fieldErrors.forEach((fieldError)=> { %>
                        <p class="mb-0">
                          <%= fieldError.message %>
                        </p>
                        <% }) %>
                    </div>
                    <% } %>
              </div>

              <!-- Confirm Password -->
              <div class="col-md-12">
                <% fieldErrors=errors.filter(error=> error.path === "confirmPassword"); %>
                  <input type="password" class="form-control <%= fieldErrors.length > 0 ? 'is-invalid' : '' %>"
                    name="confirmPassword" placeholder="Confirm Password" required />
                  <% if (fieldErrors.length> 0) { %>
                    <div class="invalid-feedback d-block">
                      <% fieldErrors.forEach((fieldError)=> { %>
                        <p class="mb-0">
                          <%= fieldError.message %>
                        </p>
                        <% }) %>
                    </div>
                    <% } %>
              </div>

              <div class="col-md-12 text-center">
                <div class="loading">Processing</div>
                <div class="error-message"></div>
                <div class="sent-message">Sign Up Successful!</div>

                <button type="submit">Sign Up</button>
              </div>
            </div>
          </form>
        </div>
        <!-- End Sign Up Form -->
      </div>
    </div>
  </section>
  <!-- Sign Up Section -->